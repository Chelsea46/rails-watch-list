<h1>Lists#:show</h1>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <li> <%= movie.title%> <%= link_to "Delete", bookmark_path(bookmark), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>

